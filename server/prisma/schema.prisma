generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String                   @id @default(uuid())
  slug            String                   @unique
  title           String
  mainImage       String
  price           Float                    @default(0)
  rating          Int                      @default(0)
  description     String                   @db.LongText
  manufacturer    String
  inStock         Int                      @default(1)
  categoryId      String?                  // Legacy field - kept for migration, use categories relation instead
  viewCount       Int?
  productType     ProductType              @default(PHYSICAL)
  downloadFile    String?                  // Path to downloadable file for digital products
  downloadLimit   Int?                     // Max downloads allowed per purchase
  stripeProductId String?                  // Stripe product ID
  stripePriceId   String?                  // Stripe price ID
  features        String?                  @db.LongText // JSON array of features for landing page
  videoUrl        String?                  // YouTube or video embed URL
  quizFormatId    String?                  // Reference to QuizFormat
  discountCodes   DiscountCodeProduct[]
  images          Image[]                  @relation("ProductImages")
  category        Category?                @relation("ProductCategory", fields: [categoryId], references: [id])
  quizFormat      QuizFormat?              @relation(fields: [quizFormatId], references: [id])
  categories      ProductCategory[]        // Many-to-many categories
  Wishlist        Wishlist[]
  customerOrders  customer_order_product[]
  purchases       Purchase[]

  @@index([categoryId], map: "Product_categoryId_fkey")
  @@index([quizFormatId])
}

model Purchase {
  id              String    @id @default(uuid())
  userId          String?
  email           String    // For guest purchases
  productId       String
  stripePaymentId String?
  stripeSessionId String?
  downloadToken   String?   @unique // Secure token for guest downloads
  downloadCount   Int       @default(0)
  status          String    @default("pending") // pending, completed, refunded
  createdAt       DateTime  @default(now())
  expiresAt       DateTime? // When download link expires for guests
  product         Product   @relation(fields: [productId], references: [id])
  user            User?     @relation(fields: [userId], references: [id])

  @@index([productId])
  @@index([userId])
  @@index([stripeSessionId])
  @@index([downloadToken])
}

model DiscountCode {
  id                 String                @id @default(uuid())
  code               String                @unique
  discountType       DiscountType
  discountValue      Float
  startDate          DateTime?
  endDate            DateTime?
  minPurchase        Int?
  maxRedemptions     Int?
  currentRedemptions Int                   @default(0)
  isActive           Boolean               @default(true)
  createdAt          DateTime              @default(now())
  updatedAt          DateTime              @updatedAt
  orders             Customer_order[]
  applicableProducts DiscountCodeProduct[]

  @@index([code])
}

model DiscountCodeProduct {
  id             String       @id @default(uuid())
  discountCodeId String
  productId      String
  discountCode   DiscountCode @relation(fields: [discountCodeId], references: [id], onDelete: Cascade)
  product        Product      @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([discountCodeId, productId])
  @@index([discountCodeId])
  @@index([productId])
}

model Image {
  imageID   String  @id @default(uuid())
  productID String
  image     String
  product   Product @relation("ProductImages", fields: [productID], references: [id], onDelete: Cascade)

  @@index([productID], map: "Image_productID_fkey")
}

model Visitor {
  id               String    @id @default(uuid())
  ip               String
  path             String?
  referrer         String?
  referrerCategory String?
  city             String?
  country          String?
  latitude         Float?
  longitude        Float?
  timestamp        DateTime  @default(now())
  sessionId        String?   // Tracks user session across pages
  userAgent        String?   // Raw user agent string
  deviceType       String?   // Mobile, desktop, tablet, etc.
  browser          String?   // Browser name
  os               String?   // Operating system
  timeOnPage       Int?      // Duration in seconds
  actions          Json?     // Store actions as JSON array
}

model User {
  id                    String         @id @default(uuid())
  email                 String         @unique
  password              String?
  role                  String?        @default("user")
  avatar                String?
  bio                   String?
  firstName             String?
  lastName              String?
  createdAt             DateTime       @default(now())
  userName              String?        @unique
  stripeCustomerId      String?        // Stripe customer ID for subscriptions
  BlogPosts             BlogPost[]     @relation("AuthorPosts")
  Comments              Comment[]
  purchases             Purchase[]
  receivedNotifications Notification[] @relation("ReceivedNotifications")
  sentNotifications     Notification[] @relation("SentNotifications")
  settings              Settings[]     @relation("UserSettings")
  votes                 Vote[]         @relation("UserVotes")
  Wishlist              Wishlist[]
}

model Settings {
  id        Int      @id @default(autoincrement())
  userId    String
  orders    Boolean  @default(true)
  products  Boolean  @default(true)
  blog      Boolean  @default(true)
  users     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation("UserSettings", fields: [userId], references: [id])

  @@index([userId], map: "Settings_userId_fkey")
}

model Notification {
  id          String   @id @default(uuid())
  type        String
  recipientId String
  senderId    String?
  entityId    String
  entityType  String
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
  recipient   User     @relation("ReceivedNotifications", fields: [recipientId], references: [id], onDelete: Cascade)
  sender      User?    @relation("SentNotifications", fields: [senderId], references: [id])

  @@index([recipientId], map: "Notification_recipientId_fkey")
  @@index([senderId], map: "Notification_senderId_fkey")
}

model Customer_order {
  id             String                   @id @default(uuid())
  phone          String
  email          String
  company        String
  address        String
  apartment      String
  postalCode     String
  dateTime       DateTime?                @default(now())
  status         String
  city           String
  country        String
  orderNotice    String?
  total          Int
  firstName      String
  lastName       String
  discountCodeId String?
  discountCode   DiscountCode?            @relation(fields: [discountCodeId], references: [id])
  products       customer_order_product[]

  @@index([discountCodeId], map: "Customer_order_discountCodeId_fkey")
}

model customer_order_product {
  id              String         @id @default(uuid())
  customerOrderId String
  productId       String
  quantity        Int
  customerOrder   Customer_order @relation(fields: [customerOrderId], references: [id])
  product         Product        @relation(fields: [productId], references: [id])

  @@index([customerOrderId], map: "customer_order_product_customerOrderId_fkey")
  @@index([productId], map: "customer_order_product_productId_fkey")
}

model Category {
  id                String            @id @default(uuid())
  name              String
  coverImage        String?
  metaDescription   String?
  metaTitle         String?
  type              CategoryType      @default(PRODUCT)
  posts             BlogPost[]        @relation("BlogCategory")
  products          Product[]         @relation("ProductCategory")
  productCategories ProductCategory[] // Many-to-many with products
}

model QuizFormat {
  id              String    @id @default(uuid())
  name            String    @unique // URL-friendly slug: "basic-quiz", "music-quiz"
  displayName     String             // Display name: "Basic Quiz", "Music Quiz"
  description     String?   @db.LongText
  explainerImages String?   @db.LongText // JSON array of image filenames
  displayOrder    Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  products        Product[]
}

model ProductCategory {
  id         String   @id @default(uuid())
  productId  String
  categoryId String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([productId, categoryId])
  @@index([productId])
  @@index([categoryId])
}

model HomepageCard {
  id           String          @id @default(uuid())
  title        String
  description  String          @db.Text
  price        String          // Flexible: "From £15", "Free", "£4.99/mo"
  href         String
  image        String?         // CDN filename
  badge        String?
  cardType     HomepageCardType @default(DOWNLOAD)
  displayOrder Int             @default(0)
  isActive     Boolean         @default(true)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

enum HomepageCardType {
  DOWNLOAD
  SUBSCRIPTION
  EVENT
  APP
  FREE
}

model Wishlist {
  id        String  @id @default(uuid())
  productId String
  userId    String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId], map: "Wishlist_productId_fkey")
  @@index([userId], map: "Wishlist_userId_fkey")
}

model Subscriber {
  id           String   @id @default(uuid())
  email        String   @unique
  subscribedAt DateTime @default(now())
  optIn        Boolean  @default(true)
}

model BlogPost {
  id              String    @id @default(uuid())
  title           String
  slug            String    @unique
  content         String    @db.LongText
  excerpt         String?   @db.LongText
  coverImage      String?
  published       Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  metaTitle       String?
  metaDescription String?
  authorId        String
  categoryId      String
  viewCount       Int?
  author          User      @relation("AuthorPosts", fields: [authorId], references: [id], onDelete: Cascade)
  category        Category  @relation("BlogCategory", fields: [categoryId], references: [id])
  comments        Comment[]
  tags            Tag[]     @relation("PostTags")

  @@index([authorId], map: "BlogPost_authorId_fkey")
  @@index([categoryId], map: "BlogPost_categoryId_fkey")
}

model Comment {
  id        String    @id @default(uuid())
  message   String
  createdAt DateTime  @default(now())
  userId    String
  postId    String
  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")
  post      BlogPost  @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes     Vote[]

  @@index([postId], map: "Comment_postId_fkey")
  @@index([userId], map: "Comment_userId_fkey")
  @@index([parentId], map: "Comment_parentId_fkey")
}

model Vote {
  id        String   @id @default(uuid())
  type      String
  userId    String
  commentId String
  createdAt DateTime @default(now())
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user      User     @relation("UserVotes", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@index([commentId], map: "Vote_commentId_fkey")
  @@index([userId], map: "Vote_userId_fkey")
}

model Tag {
  id    String     @id @default(uuid())
  name  String     @unique
  posts BlogPost[] @relation("PostTags")
}

enum CategoryType {
  PRODUCT
  BLOG
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum ProductType {
  PHYSICAL
  DIGITAL_DOWNLOAD
  SUBSCRIPTION
  EVENT
}
